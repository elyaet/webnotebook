{
    "name": "Web Notebook",
    "id": "webnotebook",
    "description": {
        "en": "A free web notebook.",
        "fr": "Un notebook web libre."
    },
    "licence": "GPL-2",
    "developer": {
        "name": "Étienne Lyaët",
        "email": "elyaet@gmail.com",
        "url": "https://github.com/elyaet/webnotebook"
    },
    "multi_instance": "false",
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "ask": {
                    "en": "Choose a domain for webnotebook"
                },
                "example": "example.com"
            },
            {
                "name": "path",
                "ask": {
                    "en": "Choose a path for webnotebook"
                },
                "example": "/webnotebook",
                "default": "/webnotebook"
            },
            {
                "name": "admin",
                "ask": {
                    "en": "Choose an admin user"
                },
                "example": "johndoe"
            },
            {
                "name": "is_public",
                "ask": {
                    "en": "Is it a public application ?"
                },
                "choices": ["Yes", "No"],
                "default": "Yes"
            }
        ]
    }
}
